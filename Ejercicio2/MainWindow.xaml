        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="598"/>
        <RadioButton x:Name="rbProfundidad" Content="Stream de profundidad" HorizontalAlignment="Left" Margin="632,178,0,0" VerticalAlignment="Top" Checked="rbProfundidad_Checked" IsChecked="True"/>
        <RadioButton x:Name="rbColor" Content="Stream de color" HorizontalAlignment="Left" Margin="632,225,0,0" VerticalAlignment="Top" Checked="rbColor_Checked"/>

    </Grid>
</Window>
